@page
@model FisketorvetApp.Pages.CreateAccount

@{
}

<!DOCTYPE html>

<!-- Martin -->

<html>
<head>
    <title></title>
</head>
<body>
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="@Model.User.Name" class="control-label">Name</label>
                    <input asp-for="@Model.User.Name" class="form-control"/>
                    <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-1">
                <div class="form-group">
                    <label asp-for="@Model.User.DateOfBirthYear" class="control-label">Year</label>
                    <input asp-for="@Model.User.DateOfBirthYear" class="form-control"/>
                    <span asp-validation-for="@Model.User.DateOfBirthYear" class="text-danger"></span>

                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <label asp-for="@Model.User.DateOfBirthMonth" class="control-label">Month</label>
                    <input asp-for="@Model.User.DateOfBirthMonth" class="form-control"/>
                    <span asp-validation-for="@Model.User.DateOfBirthMonth" class="text-danger"></span>

                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group">
                    <label asp-for="@Model.User.DateOfBirthDay" class="control-label">Day</label>
                    <input asp-for="@Model.User.DateOfBirthDay" class="form-control"/>
                    <span asp-validation-for="@Model.User.DateOfBirthDay" class="text-danger"></span>

                </div>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="@Model.User.PhoneNumber" class="control-label">Phone number</label>
            <input asp-for="@Model.User.PhoneNumber" class="form-control"/>
            <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Email" class="control-label">Email</label>
            <input asp-for="@Model.User.Email" class="form-control"/>
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>

        </div>
        
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="@Model.User.Password" class="control-label">Password</label>
                    <input asp-for="@Model.User.Password" class="form-control"/>
                    <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
        </div>

    </div>


</form>
</body>
</html>