@page
@model FisketorvetApp.Pages.RestaurantModel
@{
}
<!--Máté-->

<h1 align="center">Restaurants</h1>

<div>
    <form>
        <p>
            Search: <input type="text" asp-for="Criteria" />
            <input type="submit" value="filter" />
        </p>
    </form>
</div>

<div class="container">
    <div class="row">
        @foreach (var restaurant in Model.Restaurants)
        {
            <div class="card mb-3 mx-auto col-12 col-md-6 col-lg-3">
                <div class="card-body">
                    <a class="font-weight-bold" style="color: #efb0c6; text-decoration: none; font-size: larger" asp-page="/Consumables" asp-route-name="@restaurant.Name">@restaurant.Name</a>
                    <h6> @restaurant.Location</h6>
                    <h6>@restaurant.OpeningHours</h6>
                </div>
            </div>
        }
    </div>
</div>
