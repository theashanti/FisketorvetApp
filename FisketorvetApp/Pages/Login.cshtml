@page
@model FisketorvetApp.Pages.LoginModel
@{
}

<!-- Máté -->

<html>
<head>
    <title>Welcome @model.user </title>
</head>
<body>
    <form method="post">
        <div class="container">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label">Password</label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>

        </div>


    </form>
</body>
</html>