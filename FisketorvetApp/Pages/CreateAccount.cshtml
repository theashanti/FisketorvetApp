@page
@model FisketorvetApp.Pages.CreateAccount

@{
}

<!DOCTYPE html>

<!-- Martin -->

<html>
<head>
    <title></title>
</head>
<body>
    <h2>Create account</h2>
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.Name" class="control-label">Name</label>
                        <input asp-for="@Model.CreateAccountViewModel.Name" class="form-control" />
                        <span asp-validation-for="@Model.CreateAccountViewModel.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.DateOfBirthYear" class="control-label">Year</label>
                        <input asp-for="@Model.CreateAccountViewModel.DateOfBirthYear" class="form-control" />
                        <span asp-validation-for="@Model.CreateAccountViewModel.DateOfBirthYear" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.DateOfBirthMonth" class="control-label">Month</label>
                        <input asp-for="@Model.CreateAccountViewModel.DateOfBirthMonth" class="form-control" />
                        <span asp-validation-for="@Model.CreateAccountViewModel.DateOfBirthMonth" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.DateOfBirthDay" class="control-label">Day</label>
                        <input asp-for="@Model.CreateAccountViewModel.DateOfBirthDay" class="form-control" />
                        <span asp-validation-for="@Model.CreateAccountViewModel.DateOfBirthDay" class="text-danger"></span>

                    </div>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="@Model.CreateAccountViewModel.PhoneNumber" class="control-label">Phone number</label>
                <input asp-for="@Model.CreateAccountViewModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.CreateAccountViewModel.PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.CreateAccountViewModel.Email" class="control-label">Email</label>
                <input asp-for="@Model.CreateAccountViewModel.Email" class="form-control" />
                <span asp-validation-for="@Model.CreateAccountViewModel.Email" class="text-danger"></span>

            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.Password" class="control-label">Password</label>
                        <input asp-for="@Model.CreateAccountViewModel.Password" class="form-control"/>
                        <span asp-validation-for="@Model.CreateAccountViewModel.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="@Model.CreateAccountViewModel.ConfirmPassword" class="control-label">Enter password again</label>
                        <input asp-for="@Model.CreateAccountViewModel.ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="@Model.CreateAccountViewModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="@Model.CreateAccountViewModel.ClubMembership">I want to be a Club Member</label>
                <input class="border-dark" type="checkbox" asp-for="@Model.CreateAccountViewModel.ClubMembership">
            </div>
            <div class="form-group">
                <input type="submit" value="Create account" class="btn btn-primary" />
            </div>

        </div>



    </form>
</body>
</html>