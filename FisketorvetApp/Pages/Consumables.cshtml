@page
@using Microsoft.AspNetCore.Http
@model FisketorvetApp.Pages.ConsumablesModel
@{
}
<!--Máté-->

<div class="container">
    <h1 class="text-center">@Model.Rname</h1>
    <div class="text-center">
            <p><strong>@Model.Rname</strong>    Open from 10 to 15</p>
    </div>
</div>

<div>
    <form>
        <p>
            Search: <input type="text" asp-for="Criteria" />
            <input type="submit" value="filter" />
        </p>
    </form>
</div>

<div class="container-fluid mt-50">
    <div class="row">
        @if (Model.Consumables != null)
        {
            @foreach (var consumable in Model.Consumables)
            {
                <div class="card mb-3 mx-auto col-12 col-md-6 col-lg-3">
                    <div class="card-body">
                        <div class="mx-auto">
                            <div class="product-details">
                                <span class="font-weight-bold d-block" style="color: #efb0c6; text-decoration: none;" >@consumable.Name</span> <span>@consumable.Price kr</span> 
                                <div class="weight">@consumable.Size </div>

                                @if (HttpContext.Session.GetString("Name") != null)
                                {
                                <a class="btn btn-info" asp-page="/Consumables" asp-route-id="@consumable.Id" asp-route-iname="@consumable.Name">Add to cart</a>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
